{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AssemblyChain Process Schema",
  "type": "object",
  "required": ["schemaVersion", "header", "steps"],
  "properties": {
    "schemaVersion": { "type": "string" },
    "header": {
      "type": "object",
      "properties": {
        "generator": { "type": "string" },
        "author": { "type": "string" },
        "description": { "type": "string" },
        "createdUtc": { "type": "string", "format": "date-time" },
        "output": { "type": "string" }
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["index", "partId", "direction", "batch", "insert"],
        "properties": {
          "index": { "type": "integer" },
          "partId": { "type": "string" },
          "direction": {
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": { "type": "number" }
          },
          "batch": { "type": "integer" },
          "insert": { "type": "boolean" }
        }
      }
    },
    "metadata": { "type": "object" }
  }
}
